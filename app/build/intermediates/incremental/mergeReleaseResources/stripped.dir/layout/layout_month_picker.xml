<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvYearMonth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="16dp"
        android:text="Jan, 2019"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnDec"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitStart"
        android:src="@drawable/ic_keyboard_arrow_left_dark"
        app:layout_constraintBottom_toBottomOf="@+id/tvYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYearMonth" />

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="12dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/btnInc"
        app:layout_constraintStart_toEndOf="@+id/btnDec"
        app:layout_constraintTop_toBottomOf="@+id/tvYearMonth"
        tools:text="2019" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnInc"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitStart"
        android:src="@drawable/ic_keyboard_arrow_right_dark"
        app:layout_constraintBottom_toBottomOf="@+id/tvYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYearMonth" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="1"
        android:text="فروردین"
        android:textColor="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYear" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="2"
        android:text="اردیبهشت"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton6"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton6"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton6" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="3"
        android:text="خرداد"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton5"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton5"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton5" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:button="@null"
        android:tag="4"
        android:text="تیر"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton7"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton7" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="5"
        android:text="مرداد"
        android:textColor="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioTextButton6" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="6"
        android:text="شهریور"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="7"
        android:text="مهر"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton2"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton2"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton2" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:button="@null"
        android:tag="8"
        android:text="آبان"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton3"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton3" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="9"
        android:text="آذز"
        android:textColor="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioTextButton" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="10"
        android:text="دی"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton9"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton9"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton9" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:button="@null"
        android:tag="11"
        android:text="بهمن"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton10"
        app:layout_constraintEnd_toStartOf="@+id/radioTextButton12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton10"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton10" />

    <me.muhammadali.qpersonalaccounting.ui.custom.RadioTextButton
        android:id="@+id/radioTextButton12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:button="@null"
        android:tag="12"
        android:text="اسفند"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/radioTextButton11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioTextButton11"
        app:layout_constraintTop_toTopOf="@+id/radioTextButton11" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/monthGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="radioTextButton8,radioTextButton2,radioTextButton10,radioTextButton7,radioTextButton5,radioTextButton,radioTextButton9,radioTextButton6,radioTextButton4,radioTextButton11,radioTextButton3,radioTextButton12" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOk"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="تایید"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioTextButton12" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="لغو"
        app:layout_constraintEnd_toStartOf="@+id/btnOk"
        app:layout_constraintTop_toTopOf="@+id/btnOk" />

</androidx.constraintlayout.widget.ConstraintLayout>